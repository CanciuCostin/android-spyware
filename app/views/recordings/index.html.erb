<p id="notice"><%= notice %></p>

<h1>Recordings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Filename</th>
      <th>Smartphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recordings.each do |recording| %>
      <tr>
        <td><%= recording.date %></td>
        <td><%= recording.duration %></td>
        <td><%= recording.filename %></td>
        <td><%= recording.smartphone_id %></td>
        <td><%= link_to 'Show', recording %></td>
        <td><%= link_to 'Edit', edit_recording_path(recording) %></td>
        <td><%= link_to 'Destroy', recording, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

